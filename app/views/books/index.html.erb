
<% if flash[:notice] %>
<%= flash[:notice] %>
<% end %>
<h1>Books</h1>
<table>
 <tr>
   <td width="300">title</td>
   <td width="300">body</td>
   <td width="50"></td>
   <td width="50"></td>
   <td width="50"> </td>
 </tr>
 <% @books.each do |book| %>
 <tr>
   <td><%= book.title %></td>
   <td><%= book.body %></td>
   <td><%= link_to "Show", book_path(book) %></td>
   <td><%= link_to "Edit", edit_book_path(book) %></td>
   <td><%= link_to "Destroy", book_path(book), method: :delete ,data: {confirm:"Are You Sure?"}%></td>
 </tr>
 <% end %>
</table>

<h2>New book</h2>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>
	<p>Title</p>
	<%= f.text_field :title %>
	<p>Body</p>
	<%= f.text_area :body %>
	<%= f.submit "Create Book" %>
<% end %>